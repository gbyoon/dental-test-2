  <body ng-controller="mainCtrl">
	
	<div class="wrapper"><!--wrapper-->
		
		<div class="container"><!--container-->
		  <h1>상담원 등록 페이지 입니다.</h1>
		  
		  <form class="form">
			<input type="text" placeholder="성함" ng-model="adminName"/> <br/>
			<input type="text" placeholder="아이디" ng-model="adminId"/> <br/>
			<input type="password" placeholder="패스워드" ng-model="password"/> <br/>
			<button ng-click="submit()" id="login-button">등록</button>
